# ========================
# Application Configuration
# ========================
PORT=3000
NODE_ENV=development

# ========================
# Database Configuration
# ========================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=learningPostgres
DB_SYNC=false  # Set to true only for development

# ========================
# JWT Configuration
# ========================
JWT_ACCESS_SECRET=your_jwt_access_secret_key
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRY=7d

# ========================
# Redis Configuration
# ========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=3600  # Cache TTL in seconds

# ========================
# Rate Limiting
# ========================
RATE_LIMIT_TTL=60    # Time window in seconds
RATE_LIMIT=100       # Maximum requests per IP per time window

# ========================
# API Configuration
# ========================
API_PREFIX=api
API_VERSION=1
JWT_ACCESS_SECRET=your-jwt-secret-key
JWT_ACCESS_EXPIRY=1h
JWT_ACCESS_TEMP_SECRET=your-temp-jwt-secret-key
JWT_ACCESS_TEMP_EXPIRY=10m

# External API Configuration
ACCESS_KEY=your-access-key
FETCH_COUNTRY_API=https://apiip.net/api/check?ip=